{
    "env": {
        "es6": true,
        "node": true,
        "mongo": true,
        "mocha": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "none"
            }
        ],
        "no-underscore-dangle": [
            0
        ],
        "quote-props": [
            0
        ],
        "consistent-return": [
            0
        ] 
    } 
}